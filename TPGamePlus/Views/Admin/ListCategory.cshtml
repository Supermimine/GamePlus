@model IEnumerable<TPGamePlus.Domain.Entities.Category>
@{
    ViewData["Title"] = "Admin";
}

<head>
    <link rel="stylesheet" href="~/css/Admin.css">
</head>



<btn class="btn">
    <a asp-controller="Admin" asp-action="ManageCategory">Ajouter une nouvelle catégorie</a>
</btn>
<btn class="btn">
    <a asp-controller="Admin" asp-action="IndexAdmin">Page admin</a>
</btn>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isMainShopFilter)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isMainShopFilter)
                </td>
                <td>
                    <a class="PointerCursor" onclick="ComfirmeDelete('/Admin/DeleteCategory/@item.CategoryID')">Supprimer</a>
                    <a asp-controller="Admin" asp-action="EditCategory" asp-route-id="@item.CategoryID">Modifier</a>
                </td>
            </tr>
        }
    </tbody>
</table>