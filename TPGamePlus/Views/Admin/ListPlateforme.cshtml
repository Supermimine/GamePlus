@model IEnumerable<TPGamePlus.Domain.Entities.Plateforme>
@{
    ViewData["Title"] = "Admin";
}

<head>
    <link rel="stylesheet" href="~/css/Admin.css">
</head>



<btn class="btn">
    <a asp-controller="Admin" asp-action="ManagePlateforme">Ajouter une nouvelle compagnie</a>
</btn>
<btn class="btn">
    <a asp-controller="Admin" asp-action="IndexAdmin">Page admin</a>
</btn>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlateformeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isMainShopFilter)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PlateformeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isMainShopFilter)
                </td>
                <td>
                    <a class="PointerCursor" onclick="ComfirmeDelete('/Admin/DeletePlateforme/@item.PlateformeID')">Supprimer</a> |
                    <a asp-controller="Admin" asp-action="EditPlateforme" asp-route-id="@item.PlateformeID">Modifier</a>
                </td>
            </tr>
        }
    </tbody>
</table>
