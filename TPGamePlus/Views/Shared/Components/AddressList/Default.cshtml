@model IEnumerable<TPGamePlus.Domain.Entities.Address>

<head>
	<link rel="stylesheet" href="~/css/Account.css">
</head>



<div style="margin-top:25px;">
	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Addresse
				</th>
				<th>
					Ville
				</th>
				<th>
					Pays
				</th>
				<th>
					Province
				</th>
				<th>
					Code postale
				</th>
				<th>
					<strong>Action</strong>
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.StreetAddress)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.City)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Country)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Province)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.PostalCode)
					</td>
					<td>
						<a class="PointerCursor actionLink" onclick="ComfirmeDelete('/Account/DeleteAddress/@item.AddressID')">Supprimer</a> |
						<a class="actionLink" asp-controller="Account" asp-action="EditAddress" asp-route-id="@item.AddressID">Modifier</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>